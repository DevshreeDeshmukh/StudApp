<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".knowOurApp"
    android:background="@drawable/bg"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        android:textColor="#adefd1"
        android:text="Know Our App"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#02FFFFFF"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:layout_gravity="center"
            android:id="@+id/prev"
            android:layout_marginStart="0dp"

            android:layout_marginLeft="0dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ViewFlipper
                android:layout_width="275dp"
                android:layout_height="300dp"
                android:id="@+id/viewf"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="275dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/mint"
                    app:cardCornerRadius="50dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/class910"/>
                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="110dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/soldier_blue"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:text="This App is for Class 9th and 10th Students For their important years"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="275dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/mint"
                    app:cardCornerRadius="50dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/mathicon"/>
                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="110dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/soldier_blue"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:text="Due to Mathematics our reasoning, creativity, abstract thinking, critical thinking, problem solving abilities are improved"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="275dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/mint"
                    app:cardCornerRadius="50dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/scienceicon"/>
                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="110dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/soldier_blue"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:text="Science is Collective endeavor, it nourishes our spirit"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="275dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/mint"
                    app:cardCornerRadius="50dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ssticon"/>
                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="110dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/soldier_blue"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:text="Social science is important because it provides an evidence-based foundation on which to build a more effective government"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="275dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/mint"
                    app:cardCornerRadius="50dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/hindicon"/>
                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="110dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/soldier_blue"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:text="Language is important in every aspect of our lives"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="275dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/mint"
                    app:cardCornerRadius="50dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/proglang"/>
                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="110dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/soldier_blue"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:text="Programming language provide analytic skills and clear concise communication"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="275dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/mint"
                    app:cardCornerRadius="50dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/webbased"/>
                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="110dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/soldier_blue"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:text="Web based designing languages are used to develop website content, games, apps and software"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </ViewFlipper>

        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#02FFFFFF"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:layout_gravity="center"
            android:id="@+id/next"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:id="@+id/marq"
        android:text="Click One Of The Below Buttons to Open Selected Class"
        android:ellipsize="marquee"
        android:focusable="true"
        android:singleLine="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:textColor="#adefd1"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:focusable="true"
                    android:scrollbars="vertical"
                    app:cardCornerRadius="40dp"
                    app:contentPadding="6dp"
                    android:onClick="class9cbse"
                    android:backgroundTint="#adefd1"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:src="@drawable/cbse"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#00203f"


                            android:text="Class 9th"
                            android:textSize="20sp"

                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:focusable="true"
                    android:scrollbars="vertical"
                    app:cardCornerRadius="40dp"
                    app:contentPadding="6dp"
                    android:onClick="class10cbse"
                    android:backgroundTint="#adefd1"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:src="@drawable/cbse" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Class 10th"


                            android:textColor="#00203f"
                            android:textSize="20sp"

                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:focusable="true"
                    android:scrollbars="vertical"
                    app:cardCornerRadius="40dp"
                    app:contentPadding="6dp"
                    android:onClick="prolang"
                    android:backgroundTint="#adefd1"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            android:src="@drawable/proglang"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#00203f"


                            android:text="Programming Languages"
                            android:textSize="20sp"

                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:focusable="true"
                    android:scrollbars="vertical"
                    app:cardCornerRadius="40dp"
                    app:contentPadding="6dp"
                    android:onClick="webprog"
                    android:backgroundTint="#adefd1"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="138dp"
                            android:layout_gravity="center"
                            android:src="@drawable/webbased" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:text="Webpage Designing Languages"

                            android:textColor="#00203f"

                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>